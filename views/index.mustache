<html dir="ltr" lang="en-US">
{{>head}}

<body class="container">
	<div class="row">

		<div class="col-md-6 col-md-offset-3" style="text-align:center;margin-bottom:48px">

    <h1>ANGEL-COINS BACKEND<h1/>
      <form action="/api/company" method="post">
        <input type="text" name="companyName" placeholder="Company Name"/><br/>
        <input type="text" name="description" placeholder="Description"/><br/>
        <input type="text" name="stock" value="324"/><br/>
        <input type="text" name="growth" value="true"/><br/>
        <input type="text" name="trend" value="[80, 78, 86, 96, 83, 85, 76, 75, 88, 90]"/><br/>
        <input type="submit" value="Add Company"/>
      </form>
		</div>
	</div>


